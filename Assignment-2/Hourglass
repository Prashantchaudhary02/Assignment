#include <stdio.h>

int main() {
    int i,j,n=5;
    char ch;
    for(i=1;i<=n;i++){
        
        for(j=1;j<=i-1;j++){
            printf(" ");
        }
        ch='A';
        for(j=1;j<=(2*(n-i)+1);j++){
            printf("%c",ch);
                ch++;
            }
        for(j=1;j<=i-1;j++){
            printf(" ");
        }
            printf("\n");
    }
        
          
    for(i=1;i<=n-1;i++){
        ch='A';
        for(j=(n-i-1);j>=1;j--){
            printf(" ");
        }
        for(j=1;j<=(2*i+1);j++){
            printf("%c",ch);
                ch++;
            }
        for(j=(n-i-1);j>=1;j--){
            printf(" ");
        }
            printf("\n");
    }
    return 0;
}
