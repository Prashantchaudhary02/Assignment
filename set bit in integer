#include <stdio.h>

int countSetBits(int n) {
    int count = 0;
    while (n > 0) {
        n = n & (n - 1);  
        count++;
    }
    return count;
}

int main() {
    int number;
    printf("Enter an integer: ");
    scanf("%d", &number);
    
    int result = countSetBits(number);
    printf("Number of set bits in %d is: %d\n", number, result);
    
    return 0;
}